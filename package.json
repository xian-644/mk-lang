{
  "name": "mk-lang",
  "displayName": "mk-lang",
  "description": "一个用于多语言替换的VSCode插件",
  "version": "0.1.10",
  "icon": "./icon.jpeg",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mk-lang.replaceWithLangKey"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mk-lang.replaceWithLangKey",
        "title": "mk-lang: 语言替换"
      },
      {
        "command": "mk-lang.template.0",
        "title": "模板 1: $t(\"${key}\")"
      },
      {
        "command": "mk-lang.template.1",
        "title": "模板 2: this.$t(\"${key}\")"
      },
      {
        "command": "mk-lang.template.2",
        "title": "模板 3: i18n.t(\"${key}\")"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "mk-lang.replaceWithLangKey",
          "when": "editorHasSelection",
          "group": "mk-lang@1"
        },
        {
          "submenu": "mk-lang.templateMenu",
          "when": "editorHasSelection && mk-lang.hasMultipleTemplates",
          "group": "mk-lang@2"
        }
      ],
      "mk-lang.templateMenu": [
        {
          "command": "mk-lang.template.0",
          "group": "templates"
        },
        {
          "command": "mk-lang.template.1",
          "group": "templates"
        },
        {
          "command": "mk-lang.template.2",
          "group": "templates"
        }
      ]
    },
    "submenus": [
      {
        "id": "mk-lang.templateMenu",
        "label": "mk-lang: 模板选择"
      }
    ],
    "configuration": {
      "title": "MK-Lang",
      "properties": {
        "mk-lang.langPackPath": {
          "type": "string",
          "default": "",
          "description": "多语言中文包路径，支持绝对路径和相对路径（相对于工作区根目录）"
        },
        "mk-lang.formatTemplate": {
          "type": [
            "string",
            "array"
          ],
          "default": [
            "$t(\"${key}\")",
            "this.$t(\"${key}\")",
            "i18n.t(\"${key}\")"
          ],
          "description": "替换格式模板，使用${key}作为占位符。可以是字符串或字符串数组"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "echo 'Skipping lint check for publishing'"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xian-644/mk-lang.git"
  },
  "publisher": "6fd1ca14-80cc-6075-8f0d-987d77130631",
  "keywords": [
    "mk-lang",
    "i18n",
    "vscode",
    "language",
    "translation"
  ]
}
